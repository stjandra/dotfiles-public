#!/bin/sh

#################################
# bash and zsh config.          #
#                               #
# Sourced by .bashrc and .zshrc #
#################################

#############
# Functions #
#############

getshell() {
    ps -p$$ -ocommand=
}

isbash() {
    [ "$(getshell)" = "bash" ]
}

iszsh() {
    [ "$(getshell)" = "zsh" ];
}

# Source if file exists and readable.
mysource () {
    [ -r "$1" ] && . "$1"
}

# Reload .bashrc or .zshrc depending on the shell.
so() {
    if isbash; then
        mysource "$HOME/.bashrc"
    elif iszsh; then
        mysource "$HOME/.zshrc"
    fi
}

# Go to a dir in ~/git
cdg() {
    cd "$HOME/git/$1" || exit
}

# Go to a dir in ~/.config
cdc() {
    cd "$HOME/.config/$1" || exit
}

path_append() {
    # From
    # https://superuser.com/a/39995
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        PATH="${PATH:+"$PATH:"}$1"
    fi
}

path_prepend() {
    # From
    # https://superuser.com/a/39995
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        PATH="$1${PATH:+":$PATH"}"
    fi
}

is_kitty() {
    [ "$TERM" = "xterm-kitty" ];
}

my_alias() {
    # Disable "This expands when defined, not when used.
    # Consider escaping." warning
    # shellcheck disable=SC2139
    alias "$1"="$2"
}

my_path() {
    path_prepend "$@"
}

bazsh_ssh_agent() {

    # From https://stackoverflow.com/a/18915067

    SSH_ENV="$HOME/.ssh/agent-environment"
    start_agent() {
        echo "Initialising new SSH agent..."
        /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
        echo succeeded
        chmod 600 "${SSH_ENV}"
        . "${SSH_ENV}" > /dev/null
        # ssh-add is run during xmonad startup by xmonad.hs
        #/usr/bin/ssh-add;
    }

    # Source SSH settings, if applicable
    if [ -f "${SSH_ENV}" ]; then
        . "${SSH_ENV}" > /dev/null
        #ps ${SSH_AGENT_PID} doesn't work under cywgin
        ps -ef | grep "${SSH_AGENT_PID}" | grep ssh-agent$ > /dev/null || {
            start_agent;
        }
    else
        start_agent;
    fi
}

# Adapted from https://github.com/gokcehan/lf/blob/master/etc/lfcd.sh
lfcd () {
    tmp="$(mktemp)"
    lf_ueberzug -last-dir-path="$tmp" "$@"
    if [ -f "$tmp" ]; then
        dir="$(cat "$tmp")"
        rm -f "$tmp"
        if [ -d "$dir" ]; then
            if [ "$dir" != "$(pwd)" ]; then
                cd "$dir" || exit 1
            fi
        fi
    fi
}

########
# PATH #
########

my_path '.'

. "$HOME/.config/my-shell/path.sh"

###############
# Environment #
###############

# Commented, ssh-agent is currently started by fish
#if is_arch; then
#    bazsh_ssh_agent
#fi

# Ignore "Declare and assign separately to avoid masking return values" warning.
GPG_TTY="$(tty)"
export GPG_TTY

export EDITOR='nvim'

if has_go; then
    if is_macos; then
        export GOPATH="$HOME/go"
        # Calling brew takes a few seconds
        #export GOROOT="$(brew --prefix golang)/libexec"
        export GOROOT="/usr/local/opt/go/libexec"
    fi
fi

# Enable less to open compressed files .gz etc.
if [ -f /usr/local/bin/lesspipe.sh ]; then
    export LESSOPEN="|/usr/local/bin/lesspipe.sh %s" LESS_ADVANCED_PREPROCESSOR=1
fi

if is_linux; then
    mysource /usr/share/doc/fzf/examples/key-bindings.bash
    mysource /usr/share/doc/fzf/examples/completion.bash
fi

export FZF_DEFAULT_COMMAND='find .'
export FZF_CTRL_T_COMMAND='find .'

# jenv
# Must be after jenv is added to path.
if command -v jenv >/dev/null 2>&1; then
    eval "$(jenv init -)"
fi

# pyenv
if command -v pyenv >/dev/null 2>&1; then
    eval "$(pyenv init -)"
fi

###########
# Aliases #
###########

# shellcheck source=./aliases.config
. "${HOME}/.config/my-shell/aliases.sh"
